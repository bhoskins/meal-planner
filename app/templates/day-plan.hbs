  {{/link-to}}
</div>

<hr class="section-divide section-divide-load" />


{{!-- @@@@@@ Select Meal Nav @@@@@@@@ --}}
    <h2 class="section-header heading-meal">
      Choose Meal
    </h2>

    <button type="submit" class="save-meal-button"
    {{action 'createMeal'}} >
    Save Meal
    </button>

<div class="show-all-button"
    {{action 'showAllMeals' }} >

</div>

<div class="meal-type nav">
    <button class=
"meal-cat-btn js-breakfast-btn"
      {{action 'pickBreakfast' }}>
      Breakfast
    </button>

  <button class="meal-cat-btn js-snack1-btn"
    {{action 'pickSnack1' }}>
    Snack 1
  </button>

  <button class="meal-cat-btn js-lunch-btn"
    {{action 'pickLunch' }}>
    Lunch
  </button>

  <button class="meal-cat-btn js-snack2-btn"
    {{action 'pickSnack2' }}>
    Snack 2
  </button>

  <button class="meal-cat-btn js-dinner-btn"
    {{action 'pickDinner' }}>
    Dinner
  </button>

  <button class="meal-cat-btn js-other-btn"
    {{action 'pickOther' }}>
    Other
  </button>

</div><!-- .meal-type .nav -->

