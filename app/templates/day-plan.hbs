@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->

<div
  {{ bind-attr class=":container isShowingBreakfast:show-breakfast:hide-breakfast" }}
>

  <h1 class="selected-meal section-header sub-heading sub-heading-meal">
    Breakfast
  </h1>

<!--  Begin Headings -->
    <p class="block1 heading" >del</p>
    <p class="block1 heading">amt</p>
    <p class="block1 heading">unit</p>
    <p class="block5 heading name omega">Name - <span class='description'>Description</span></p>

    <!-- Future Feature
    <p class="block1 heading extra cal">cal</p>
    <p class="block1 heading extra">carb/g</p>
    <p class="block1 heading extra">prot/g</p>
    <p class="block1 heading extra">fat/g</p>
    <p class="block1 heading extra">sod/mg</p>
    <p class="block1 heading extra omega">fib/g</p>

    -->

    <hr class="line block12 heading">


  <ul class="meal-ul">
{{#each item in model.breakfast}}
    <li>
      <button class="delete-food-button delete-food meal-food-delete block1" {{action 'deleteFood' item}}>
      X
      </button>

      {{input type='number' min="0" step="0.25" value=item.amt class="block1"}}

      {{view "select" class="amt-unit food-line block1" content=this.amtUnit value=item.amtUnit}}

      <p class="meal-text block5 omega">{{item.name}} -
        <span class="food-desc">{{item.foodDesc}}</span>
      </p>


      <!-- Future Feature

      <p class="block1 cal table-text">260
      </p>

      <p class="block1 carb table-text">12
      </p>

      <p class="block1 prot table-text">260
      </p>

      <p class="block1 fat table-text">11.2
      </p>

      <p class="block1 sod table-text">125
      </p>

      <p class="block1 fib table-text neat-last">3
      </p>

      End Future Feature-->

    </li>
{{/each}}
  </ul>

<!-- Future Feature

  <p class="gap block3"> </p>
  <p class="total block3">Meal Total</p>

-->

</div>

