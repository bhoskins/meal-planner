{{!-- @@@@@@ Select Date @@@@@@@@ --}}

<form>
  <div class="showDate">
    <h2 class="section-header">
      Choose Date
    </h2>
  </div>

<div class="divider">
{{date-picker date=mydate valueFormat='YYYY-MM-DD' format='MMMM Do YYYY'}}

  {{#link-to 'dayPlan' mydate}}
