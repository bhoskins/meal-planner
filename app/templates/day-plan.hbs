<div id="page-wrap">

<h1 class="section-heading">Day Plan</h1>


{{!-- @@@@@@ Select Date @@@@@@@@ --}}

<form>
  <div class="showDate">
    {{this.mydate}}
  </div>

{{date-picker date=mydate valueFormat='YYYY-MM-DD' format='MM-DD-YYYY'}}

  <button {{action 'loadDayPlan'}}>
    Load Meals
  </button>


{{!-- @@@@@@ Select Meal Nav @@@@@@@@ --}}
<div class="meal-type nav">

  <button value=model.breakfast
    {{action 'pickBreakfast' }}>
    Breakfast
  </button>

  <button value=model.snack1
    {{action 'pickSnack1' }}>
    Snack 1
  </button>

  <button value=model.lunch
    {{action 'pickLunch' }}>
    Lunch
  </button>

  <button value=model.snack2
    {{action 'pickSnack2' }}>
    Snack 2
  </button>

  <button value=model.dinner
    {{action 'pickDinner' }}>
    Dinner
  </button>

  <button value=model.other
    {{action 'pickOther' }}>
    Other
  </button>

</div><!-- .meal-type .nav -->


  {{!-- @@@ Meal Category Select Below @@@@ --}}

  <h2 class="food-category-heading">
    Add Food Item
    <button {{action 'customFood'}}>
      Custom Food
    </button>
  </h2>

{{!  'selectVeggie'}}
  <button class="food-cat-button" {{action 'selectVeggie' class="veggieButton" value=isShowing }} >
    <span class="veggie-button">Veggie</span>
  </button>

  <button class="food-cat-button" {{action 'selectProtein'}} >
    <span class="protein-button">Protein</span>
  </button>

  <button class="food-cat-button" {{action 'selectCarb'}} >
    <span class="carb-button">Carb</span>
  </button>

  <button class="food-cat-button" {{action 'selectFruit'}} >
    <span class="fruit-button">Fruit</span>
  </button>

  <button class="food-cat-button" {{action 'selectDairy'}} >
    <span class="dairy-button">Dairy</span>
  </button>

  <button class="food-cat-button" {{action 'selectOther'}} >
    <span class="other-button">Other</span>
  </button>

<!--@@@@@@@@@@@ Outlets @@@@@@@@@@@@@@@@-->



{{outlet}}

<div
{{ bind-attr class="isShowingVeggies:show-veggies:hide-veggies" }}>
  {{outlet 'veggies'}}
</div>

<div
  {{ bind-attr class="isShowingProtein:show-protein:hide-protein" }} >
  {{outlet 'protein'}}
</div>

<div
  {{ bind-attr class="isShowingCarb:show-carb:hide-carb" }} >
  {{outlet 'carb'}}
</div>

<div
  {{ bind-attr class="isShowingFruit:show-fruit:hide-fruit" }} >
  {{outlet 'fruit'}}
</div>

<div
  {{ bind-attr class="isShowingDairy:show-dairy:hide-dairy" }} >
  {{outlet 'dairy'}}
</div>

<div
  {{ bind-attr class="isShowingOther:show-other:hide-other" }} >
  {{outlet 'other'}}
</div>

{{outlet 'meal'}}

<h1 class="selected-meal"> {{selectedMealDisplay}}</h1>

<ul>
{{#each item in this.dayPlanSelectedFoods}}
  <li>
    {{input type='number' min="0" step="0.25" value=item.amt}}
    {{view "select" class="amt-unit food-line" content=this.amtUnit value=item.amtUnit}}
    {{item.name}}

    <button class="delete-food-button delete-food" {{action 'deleteFood' item}}>
    X
    </button>

  </li>
{{/each}}
</ul>

  <button type="submit" {{action 'createMeal'}} >
    Save Meal
  </button>

</form>

</div><!-- .page-wrap -->

