Veggie template

{{outlet}}

<div class="section-wrap">
  <h1 class="section-header">
    Veggies
  </h1>

  <!-- @@@@@@@@@@@@@@@@@@@
      headings
@@@@@@@@@@@@@@@@@@@@@@@@@@-->

  <div class="food-heading-wrap">
    <p class="food-heading selected-food">
      Sel</p>
    <p class="food-heading amt-input">Amt</p>
    <p class="food-heading amt-unit">
      Unit</p>
    <p class="food-heading food-item-heading">Name</p>
    <p class="food-heading is-favorite">Fav</p>
    <p class="food-heading add-food">Add</p>
  </div><!-- .food-heading-wrap -->


  <div class="food-item-div">
    {{input type="checkbox" class="selected-food" checked=selectedFoods action=pickFood}}

    <input type="number" class="amt-input food-line" name="Amt" value="0.5" min="0" step="0.25">

    {{view "select"
    class="amt-unit food-line" content=amtUnit value="cup" }}

    <p class="veggie-item food-item food-line" {{action 'pickFood'}} >
      Asparagus
    </p>

    {{input type="checkbox" class="is-favorite food-line text-align-right" checked=isFavorite}}

    <button class="add-food-button add-food food-line text-align-right" {{action 'addFoods' }}>
      +
    </button>

  </div><!-- .food-item-div -->




</div><!-- .section-wrap -->





